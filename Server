const express = require('express');
const bodyParser = require('body-parser');
const path = require('path');

const app = express();
const port = 3000;

// Подключаем middleware для обработки JSON
app.use(bodyParser.json());

// Путь к статическим файлам (CSS, JS, и т.д.)
app.use(express.static(path.join(__dirname, 'public')));

// Массив задач для примера
let tasks = [];

// Маршрут для добавления задачи
app.post('/api/tasks', (req, res) => {
  const { text, completed, category, deadline, priority } = req.body;
  const newTask = {
    text,
    completed,
    category,
    deadline,
    priority,
    date: new Date().toLocaleString(),
  };
  tasks.push(newTask);
  res.json(newTask); // Отправляем добавленную задачу обратно
});

// Маршрут для получения всех задач
app.get('/api/tasks', (req, res) => {
  res.json(tasks);
});

// Главная страница
app.get('/', (req, res) => {
  res.sendFile(path.join(__dirname, 'public', 'index.html'));
});

// Запуск сервера
app.listen(port, () => {
  console.log(`Server running at http://localhost:${port}`);
});
